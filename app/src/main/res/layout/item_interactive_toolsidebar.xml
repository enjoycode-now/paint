<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/authorAvatar"
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:padding="8dp"
        android:src="@drawable/avatar_sample"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/followBtn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:padding="4dp"
        android:src="@mipmap/ic_follow"
        android:layout_marginTop="42dp"
        app:layout_constraintStart_toStartOf="@+id/authorAvatar"
        app:layout_constraintEnd_toEndOf="@id/authorAvatar"
        app:layout_constraintTop_toTopOf="@+id/authorAvatar" />


    <ImageView
        android:id="@+id/likeBtn"
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:layout_marginTop="20dp"
        android:padding="8dp"
        android:src="@mipmap/ic_heart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/authorAvatar" />


    <ImageView
        android:id="@+id/sponsorBtn"
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:layout_marginTop="20dp"
        android:padding="8dp"
        app:srcCompat="@drawable/ic_sponsor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/likeBtn"/>

    <ImageView
        android:id="@+id/shareBtn"
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="12dp"
        android:padding="12dp"
        android:elevation="12dp"
        android:src="@drawable/ic_share"
        android:contentDescription="@string/share"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sponsorBtn"/>

</androidx.constraintlayout.widget.ConstraintLayout>
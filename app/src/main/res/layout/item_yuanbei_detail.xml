                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cardview"
                    android:background="@drawable/multipleShadowsBackground"
                    android:layout_width="match_parent"
                    android:layout_height="108dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/purchasedWorkName"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginStart="10dp"
                android:text="购买作品【春风物语】"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/purchasedWorkShare"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:textSize="14sp"
                android:text="份额 10%"
                android:textColor="#8767E2"
                app:layout_constraintStart_toEndOf="@id/purchasedWorkName"
                app:layout_constraintBaseline_toBaselineOf="@id/purchasedWorkName" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginStart="10dp"
                android:text="时间：2022.01.12"
                app:layout_constraintTop_toBottomOf="@id/purchasedWorkName"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/detailNum"
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_marginEnd="10dp"
                android:text="-200"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>



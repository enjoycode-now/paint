<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="126dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="108dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/multiple_shadows_background"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/purchasedWorkName"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_marginStart="10dp"
            android:text="购买作品【春风物语】"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/purchasedWorkShare"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="份额 10%"
            android:textColor="#8767E2"
            android:textSize="14sp"
            app:layout_constraintBaseline_toBaselineOf="@id/purchasedWorkName"
            app:layout_constraintStart_toEndOf="@id/purchasedWorkName" />

        <TextView
            android:id="@+id/createAt"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_marginStart="10dp"
            android:text="时间：2022.01.12"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/purchasedWorkName" />

        <TextView
            android:id="@+id/detailNum"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:layout_marginEnd="10dp"
            android:textAlignment="textEnd"
            android:text="loading"
            android:autoSizeTextType="uniform"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/purchasedWorkShare"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
    <!--    </androidx.cardview.widget.CardView>-->

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserActivity">

    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="15:7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bg_user_center" />

    <ImageView
        android:id="@+id/configButton"
        android:layout_width="72px"
        android:layout_height="72px"
        android:layout_marginTop="60dp"
        android:background="@drawable/ic_she"
        android:onClick="onSetting"
        app:layout_constraintEnd_toEndOf="@+id/cardView"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:padding="4dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/configButton"
        app:layout_constraintWidth_percent="0.9">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="0dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="144dp"
                android:layout_marginBottom="8dp"
                android:onClick="buyScallop"
                android:text="元贝"
                android:textColor="#888888"
                android:textSize="16sp"
                app:layout_constraintBottom_toTopOf="@+id/textView3"
                app:layout_constraintEnd_toStartOf="@+id/splitLine"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/splitLine"
                app:layout_constraintVertical_chainStyle="packed" />

            <View
                android:id="@+id/splitLine"
                android:layout_width="1dp"
                android:layout_height="48dp"
                android:layout_marginTop="24dp"
                android:background="#EEEEEE"
                app:layout_constraintEnd_toStartOf="@+id/textView2"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/textView"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="粉丝"
                android:textColor="#888888"
                android:textSize="16sp"
                app:layout_constraintBottom_toTopOf="@+id/textView4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/splitLine"
                app:layout_constraintTop_toTopOf="@+id/splitLine"
                app:layout_constraintVertical_chainStyle="packed" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="buyScallop"
                android:text="200"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/splitLine"
                app:layout_constraintEnd_toEndOf="@id/textView"
                app:layout_constraintStart_toStartOf="@id/textView"
                app:layout_constraintTop_toBottomOf="@+id/textView" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="109"
                android:textColor="@color/black"
                android:textSize="14sp"

                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/splitLine"
                app:layout_constraintEnd_toEndOf="@+id/textView2"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="@+id/textView2"
                app:layout_constraintTop_toBottomOf="@+id/textView2" />

            <TextView
                android:id="@+id/authorName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="112dp"
                android:text="Esther"
                android:textColor="#cc000000"
                android:textSize="21sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/authorId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:drawableEnd="@drawable/ic_copy_id"
                android:drawablePadding="16dp"
                android:gravity="center_vertical"
                android:onClick="copyId"
                android:text="ID:0"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="@+id/authorName"
                app:layout_constraintTop_toBottomOf="@+id/authorName" />

            <View
                android:id="@+id/lineView"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="24dp"
                android:background="#EEEEEE"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/authorId" />


            <TextView
                android:id="@+id/biography"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:lineSpacingExtra="12px"
                android:text="梵高油画系列太独特啦，给人物写生增加色彩🎨\n
画册：两三事、 vintagemuse ⭐️⭐️⭐️\n
画册：两三事、 vintagemuse ⭐️⭐️⭐️\n
OOTD｜每日速写｜潮流插画｜复古油画风\n
#大触红人#Ootd #笔刷达人"
                android:textColor="#cc000000"
                android:textSize="14sp"
                app:layout_constraintBottom_toTopOf="@+id/grayBackground"
                app:layout_constraintEnd_toEndOf="@+id/lineView"
                app:layout_constraintStart_toStartOf="@+id/lineView"
                app:layout_constraintTop_toBottomOf="@+id/lineView" />

            <View
                android:id="@+id/grayBackground"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:background="#FAFAFA"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/blockchainAddress"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_marginStart="24dp"
                android:drawableEnd="@drawable/ic_copy_link"
                android:drawablePadding="20dp"
                android:gravity="center_vertical"
                android:onClick="copyAddress"
                android:text="区块链地址：0x678a79e7f"
                android:textColor="#4D000000"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/grayBackground" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/userAvatar"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:elevation="2dp"
        android:onClick="onChangeAvatar"
        android:src="@drawable/avatar_sample"
        app:civ_border_color="#FFFFFF"
        app:civ_border_width="6dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toStartOf="@+id/cardView"
        app:layout_constraintTop_toBottomOf="@+id/configButton"
        app:layout_constraintWidth_percent="0.2" />


    <TextView
        android:id="@+id/supportWorks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="#FAFAFA"
        android:gravity="center"
        android:padding="8dp"
        android:text="应援作品"
        android:textColor="#333333"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/cardView" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/supportWorksRecylerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/supportWorks" />


    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#303030"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/homePageBtn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="首页"
        android:textColor="#ffffff"
        android:textSize="21dp"
        android:onClick="onHomePage"
        android:gravity="center"
        android:background="@drawable/btn_selector_homepage"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        app:layout_constraintTop_toTopOf="@+id/view"
        app:layout_constraintStart_toStartOf="@+id/view"
        app:layout_constraintEnd_toStartOf="@+id/myPageBtn"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintWidth_percent="0.2" />

    <TextView
        android:id="@+id/myPageBtn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/btn_selector_homepage"
        android:gravity="center"
        android:text="我的"
        android:textColor="#ffffff"
        android:textSize="21dp"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        app:layout_constraintEnd_toEndOf="@+id/view"
        app:layout_constraintStart_toEndOf="@+id/homePageBtn"
        app:layout_constraintTop_toTopOf="@+id/view"
        app:layout_constraintWidth_percent="0.2" />






</androidx.constraintlayout.widget.ConstraintLayout>